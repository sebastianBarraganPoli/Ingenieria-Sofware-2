<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="co.edu.poli.proyectotienda.controlador.ProductosController"
            prefHeight="600.0" prefWidth="800.0">
    <children>
        <VBox spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <Label text="GestiÃ³n de Productos" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
                
                <TableView fx:id="tablaProductos" prefHeight="300.0">
                    <columns>
                        <TableColumn fx:id="colId" prefWidth="50.0" text="ID" />
                        <TableColumn fx:id="colNombre" prefWidth="200.0" text="Nombre" />
                        <TableColumn fx:id="colPrecio" prefWidth="100.0" text="Precio" />
                        <TableColumn fx:id="colStock" prefWidth="100.0" text="Stock" />
                    </columns>
                </TableView>
                
                <GridPane hgap="10.0" vgap="10.0">
                    <padding>
                        <Insets top="10.0" />
                    </padding>
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Label text="ID:" GridPane.rowIndex="0" />
                        <TextField fx:id="txtId" promptText="ID del producto" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                        
                        <Label text="Nombre:" GridPane.rowIndex="1" />
                        <TextField fx:id="txtNombre" promptText="Nombre del producto" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        
                        <Label text="Precio:" GridPane.rowIndex="2" />
                        <TextField fx:id="txtPrecio" promptText="Precio del producto" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        
                        <Label text="Stock:" GridPane.rowIndex="3" />
                        <TextField fx:id="txtStock" promptText="Stock disponible" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                        
                        <Button fx:id="btnAgregar" text="Agregar Producto" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                    </children>
                </GridPane>
            </children>
        </VBox>
    </children>
</AnchorPane>
